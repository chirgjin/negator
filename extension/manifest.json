{
    "name": "Negator",
    "version": "1.0",
    "description": "Hate Speech Recognition",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "index.html",
        "default_icon": {}
    },
    "content_scripts": [
        {
            "matches": ["https://*/", "http://*/"], 
            "js": ["runtime.js"],
            "run_at": "document_start"
        }
    ]
}
